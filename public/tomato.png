<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
  <defs>
    <linearGradient id="tomato-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#ff6347" />
      <stop offset="100%" stop-color="#e82c0c" />
    </linearGradient>
    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feGaussianBlur in="SourceAlpha" stdDeviation="8" />
      <feOffset dx="0" dy="4" result="offsetblur" />
      <feComponentTransfer>
        <feFuncA type="linear" slope="0.3" />
      </feComponentTransfer>
      <feMerge>
        <feMergeNode />
        <feMergeNode in="SourceGraphic" />
      </feMerge>
    </filter>
  </defs>
  <!-- 番茄主体 -->
  <circle cx="256" cy="280" r="180" fill="url(#tomato-gradient)" filter="url(#shadow)" />
  <!-- 番茄顶部 -->
  <path d="M256 100 C 200 120, 220 180, 256 180 C 292 180, 312 120, 256 100" fill="#228B22" filter="url(#shadow)" />
  <!-- 番茄叶子 -->
  <path d="M256 100 C 230 70, 200 90, 210 120 C 220 140, 240 130, 256 100" fill="#32CD32" filter="url(#shadow)" />
  <path d="M256 100 C 282 70, 312 90, 302 120 C 292 140, 272 130, 256 100" fill="#32CD32" filter="url(#shadow)" />
  <!-- 番茄高光 -->
  <ellipse cx="200" cy="230" rx="40" ry="30" fill="rgba(255,255,255,0.2)" transform="rotate(-20 200 230)" />
</svg>